<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/freeleech_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:text="fa_gift"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reported_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fa_exclamation_triangle"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/format"
        android:layout_toLeftOf="@+id/snatches"
        android:paddingRight="16dp" />

    <TextView
        android:id="@+id/snatches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/size"
        android:layout_toLeftOf="@+id/snatched_icon"
        android:paddingRight="4dp" />

    <TextView
        android:id="@+id/snatched_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/size"
        android:layout_toLeftOf="@+id/seeders"
        android:paddingRight="16dp"
        android:text="fa_undo"/>

    <TextView
        android:id="@+id/seeders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/size"
        android:layout_toLeftOf="@+id/seeders_icon"
        android:paddingRight="4dp" />

    <TextView
        android:id="@+id/seeders_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/size"
        android:layout_toLeftOf="@+id/leechers"
        android:paddingRight="16dp"
        android:text="fa_arrow_up"/>

    <TextView
        android:id="@+id/leechers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/size"
        android:layout_toLeftOf="@+id/leechers_icon"
        android:paddingRight="4dp"/>

    <TextView
        android:id="@+id/leechers_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/size"
        android:layout_alignParentRight="true"
        android:text="a_arrow_down" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snatched_icon"
        android:layout_marginTop="13dp"
        android:text="Button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
